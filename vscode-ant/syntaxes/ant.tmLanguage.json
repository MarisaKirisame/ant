{
  "name": "Ant",
  "scopeName": "source.ant",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#constructors" },
    { "include": "#typeVariables" },
    { "include": "#numbers" },
    { "include": "#booleans" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.ant",
          "begin": "\\(\\*",
          "beginCaptures": { "0": { "name": "punctuation.definition.comment.begin.ant" } },
          "end": "\\*\\)",
          "endCaptures": { "0": { "name": "punctuation.definition.comment.end.ant" } },
          "patterns": [{ "include": "#comments" }]
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.ant",
      "begin": "\"",
      "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.ant" } },
      "end": "\"",
      "endCaptures": { "0": { "name": "punctuation.definition.string.end.ant" } },
      "patterns": [
        { "name": "constant.character.escape.ant", "match": "\\\\." }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ant",
          "match": "\\b(type|let|rec|and|in|fun|match|with|when|if|then|else|of)\\b"
        },
        {
          "name": "keyword.operator.ant",
          "match": "->|=>|:=|\\|"
        }
      ]
    },
    "constructors": {
      "patterns": [
        {
          "name": "support.type.variant.ant",
          "match": "\\b[A-Z][A-Za-z0-9_']*\\b"
        }
      ]
    },
    "typeVariables": {
      "patterns": [
        {
          "name": "variable.parameter.type.ant",
          "match": "\\B'[a-zA-Z_][A-Za-z0-9_']*"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.ant",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.ant",
          "match": "\\b(true|false)\\b"
        }
      ]
    }
  }
}
